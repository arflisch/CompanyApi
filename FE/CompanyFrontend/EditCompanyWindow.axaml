<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="using:CompanyFrontend.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CompanyFrontend.EditCompanyWindow"
        x:DataType="viewmodels:EditCompanyViewModel"
        Title="EditCompanyWindow">
  <Window.Styles>
	  <Style Selector="TextBlock.label">
		  <Setter Property="FontWeight" Value="SemiBold"/>
          <Setter Property="Margin" Value="0,0,0,5"/>
      </Style>
      <Style Selector="TextBox">
            <Setter Property="Padding" Value="8"/>
        </Style>
  </Window.Styles>

    <DockPanel Margin="20">
		<StackPanel DockPanel.Dock="Bottom"
              Orientation="Horizontal"
              HorizontalAlignment="Right"
              Spacing="10"
              Margin="0,20,0,0">
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Width="100"
                    Height="35"/>
            <Button Content="Save"
                    Command="{Binding SaveCommand}"
                    Width="100"
                    Height="35"
                    Classes="accent"/>
        </StackPanel>
        <ScrollViewer>
			<StackPanel Spacing="15">
				<StackPanel Spacing="5">
					<TextBlock Text="Company name:" Classes="label"/>
                    <TextBox Text="{Binding Name}"
                             Watermark="Enter Company name"
                             MaxLength="50"/>
                </StackPanel>

                <StackPanel Spacing="5">
					<TextBlock Text="VAT number:" Classes="label"/>
                    <TextBox Text="{Binding Vat}"
                             Watermark="Enter VAT number"
                             MaxLength="50"/>
                </StackPanel>

                <Border Background="#AA0000" 
                        CornerRadius="5"
                        Padding="10"
                        IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="White"
                               TextWrapping="Wrap"/>
                </Border>

                <ProgressBar IsIndeterminate="True"
                             IsVisible="{Binding IsSaving}"
                             Height="4"
                             Margin="0,10"/>
                <TextBlock Text="Saving..."
                           IsVisible="{Binding IsSaving}"
                           HorizontalAlignment="Center"
                           FontStyle="Italic"
                           Foreground="Gray"/>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
